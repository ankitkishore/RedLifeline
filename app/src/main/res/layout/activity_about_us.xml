<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="@drawable/red_diamond_detail"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="About us"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView21"
            android:text="We never take money and we never make money for blood."
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100% FREE: "
            android:textAllCaps="false"
            android:textColor="#a20000"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calling hundreds of Blood Donors is no more required using our platform. Find nearby Hospitals and Blood Banks"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="223dp"
            android:text="Find Blood Donor:"
            android:textColor="#a20000"
            android:textSize="35dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Our Life Saving Squad:"
            android:textColor="#a20000"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Join our squad by becoming an Ambassador and save lives"
            android:textColor="#000000"
            android:textSize="25dp" />

    </LinearLayout>
</ScrollView>