<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitebkg"
    tools:context=".ambassador">
    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/red_diamond_detail"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Become an Ambassador"
        android:textColor="#ffffff"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="-11dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select who you are"
        android:textColor="#000000"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="75dp" />


    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="244dp"
        android:layout_height="37dp"
        android:layout_weight="1"
        android:text="I am a Student"
        android:textColor="#000000"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="109dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="293dp"
        android:layout_height="49dp"
        android:layout_weight="1"
        android:text="I am an Employee"
        android:textColor="#000000"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="242dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="268dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="I am a Businessman"
        android:textColor="#000000"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="146dp" />

    <RadioButton
        android:id="@+id/radioButton6"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:text="I am a Homemaker"
        android:textColor="#000000"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="194dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Address"
        android:textColor="#000000"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="321dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="331dp"
        android:layout_height="60dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:background="#a20000"
        android:hint="Addresss"
        android:drawableLeft="@drawable/ic_location_on_black_24dp"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="356dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="358dp"
        android:layout_height="66dp"
        android:background="@drawable/buttonfiled"
        android:text="Submit"
        android:textColor="#ffffff"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="456dp" />

</android.support.constraint.ConstraintLayout>