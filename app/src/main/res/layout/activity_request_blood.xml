<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitebkg">


    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_diamond_detail"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Request Blood"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView27"
        android:layout_below="@+id/textView27"
        android:text="Blood"
        android:textColor="#000000"
        android:textSize="25dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/radioButton4"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="0dp"
        android:text="Platelets"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText4"
        android:layout_below="@+id/textView26"
        android:text="Required Type"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_marginTop="153dp"
        android:text="Blood Type"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Blood Group"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_marginTop="240dp"
        android:text="Blood Units Required"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView31"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-125dp"
        android:ems="10"
        android:hint="Enter Address"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_marginBottom="215dp"
        android:text="Enter Name"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_marginBottom="125dp"
        android:text="Enter Address"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radioButton4"
        android:layout_below="@+id/textView29"
        android:ems="10"
        android:hint="Enter Blood Units"
        android:inputType="number" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <EditText
        android:id="@+id/editText6"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-215dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button7"
        android:layout_width="328dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttonfiled"
        android:text="Submit"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>